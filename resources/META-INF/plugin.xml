<idea-plugin>
	<id>org.mustbe.consulo.ikvm</id>
	<name>IKVM.NET</name>
	<depends>org.consulo.java</depends>
	<depends>org.mustbe.consulo.dotnet.core</depends>
	<depends config-file="mono-dotnet.xml" optional="true">org.mustbe.consulo.dotnet.mono</depends>
	<depends config-file="microsoft-dotnet.xml" optional="true">org.mustbe.consulo.microsoft.dotnet</depends>

	<extensions defaultExtensionNs="org.consulo.java">
		<elementFinder implementation="org.mustbe.consulo.ikvm.psi.IkvmPsiElementFinder" />
	</extensions>

	<extensions defaultExtensionNs="org.mustbe.consulo.dotnet.core">

	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<sdkType implementation="org.mustbe.consulo.ikvm.bundle.IkvmBundleType"/>
		<compiler.sorter implementation="org.mustbe.consulo.ikvm.compiler.IkvmCompilerSorter" />
		<compiler implementation="org.mustbe.consulo.ikvm.compiler.IkvmStubGenerationCompiler" />
	</extensions>
</idea-plugin>